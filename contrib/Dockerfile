    automake \
    dosfstools \
    e2fsprogs \
    genisoimage \
    git \
    libselinux-python \
    libvirt-python \
    make \
    mom \
    psmisc \
    python-cpopen \
    python-decorator \
    python-devel \
    python-inotify \
    python-ioprocess \
    python-netaddr \
    python-pthreading \
    python-setuptools \
    python-six \
    python34 \
    python34-nose \
    python34-six \
    sanlock-python \
    which \
    && \
  easy_install pip && \
  pip install nose==1.3.7 tox==2.1.1 mock
