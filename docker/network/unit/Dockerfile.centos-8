FROM quay.io/ovirt/buildcontainer:stream8

# Add runtime dependencies.
RUN dnf update -y \
    && \
    dnf install -y \
        iproute-tc \
        libnl3 \
        nmstate \
        python3-devel \
        python3-six \
        python3-pip \
    && \
    dnf clean all

# Add pytest
RUN python3 -m pip install --upgrade pip \
    && \
    python3 -m pip install pytest

CMD ["/usr/sbin/init"]
