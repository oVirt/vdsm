/var/log/vdsm/*.log {
    rotate 100
    missingok
    size 15M
    compress
    compresscmd /usr/bin/xz
    uncompresscmd /usr/bin/unxz
    compressext .xz
    create 644 @VDSMUSER@ @VDSMGROUP@
}
/var/log/core/*.dump {
    rotate 1
    missingok
    size 0
    compress
    compresscmd /usr/bin/xz
    uncompresscmd /usr/bin/unxz
    compressext .xz
    su @VDSMUSER@ @VDSMGROUP@
}
